<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<signalControl xsi:schemaLocation="http://www.matsim.org/files/dtd http://www.matsim.org/files/dtd/signalControl_v2.0.xsd" xmlns="http://www.matsim.org/files/dtd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <signalSystem refId="exampleSignalSystem">
        <signalSystemController>
            <controllerIdentifier>DefaultPlanbasedSignalSystemController</controllerIdentifier>
            <signalPlan id="2">
                <cycleTime sec="60"/>
                <offset sec="0"/>
                <signalGroupSettings refId="bronsonNorthSouth">
                    <onset sec="0"/>
                    <dropping sec="30"/>
                </signalGroupSettings>
                <signalGroupSettings refId="bronsonEastWest">
                    <onset sec="30"/>
                    <dropping sec="60"/>
                </signalGroupSettings>
                <signalGroupSettings refId="fourwayIntersectionNorthSouth">
                    <onset sec="15"/>
                    <dropping sec="45"/>
                </signalGroupSettings>
                <signalGroupSettings refId="fourwayIntersectionEastWest">
                    <onset sec="45"/>
                    <dropping sec="75"/>
                </signalGroupSettings>
            </signalPlan>
        </signalSystemController>
    </signalSystem>
</signalControl>
